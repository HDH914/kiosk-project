<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.HDH.kiosk.repository.payment.PaymentRepository">

    <insert id="orderList"
            parameterType="com.HDH.kiosk.domain.OrderList">
        INSERT INTO
            order_mst
        VALUES(
        IFNULL(
            (SELECT
                MAX(group_id)
            FROM
                product_mst
            WHERE NAME = #{menu_name}), ifnull(MAX(group_id), 0) + 1),
        #{menu_name},
        #{count},
        #{price},
        #{total_Price),
        now()
        )




    </insert>
</mapper>